{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "node",
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"removeComments": true,
		"incremental": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strict": true,
		"outDir": "./dist"
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}